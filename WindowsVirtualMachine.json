{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ojradcliffestorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "GTM-DC01Name": {
      "type": "string",
      "minLength": 1
    },
    "GTM-DC01AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "GTM-DC01AdminPassword": {
      "type": "securestring"
    },
    "GTM-DC01WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    },
    "GTM-Server01Name": {
      "type": "string",
      "minLength": 1
    },
    "GTM-Server01AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "GTM-Server01AdminPassword": {
      "type": "securestring"
    },
    "GTM-Server01WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    },
    "GTM-DC02Name": {
      "type": "string",
      "minLength": 1
    },
    "GTM-DC02AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "GTM-DC02AdminPassword": {
      "type": "securestring"
    },
    "GTM-DC02WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    },
    "PublicIP-DC01DnsName": {
      "type": "string",
      "minLength": 1
    },
    "PublicIP-Server01DnsName": {
      "type": "string",
      "minLength": 1
    },
    "PublicIP-DC02DnsName": {
      "type": "string",
      "minLength": 1
    },
    "PublicIP-FS01DnsName": {
      "type": "string",
      "minLength": 1
    },
    "PublicIP-FS02DnsName": {
      "type": "string",
      "minLength": 1
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD Domain created "
      }
    },
    "assetLocation": {
      "type": "string",
      "metadata": {
        "description": "Where to find assets used in this template"
      }
    },
    "GTM-FS01Name": {
      "type": "string",
      "minLength": 1
    },
    "GTM-FS01AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "GTM-FS01AdminPassword": {
      "type": "securestring"
    },
    "GTM-FS01WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Nano-Server",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    },
    "GTM-FS02Name": {
      "type": "string",
      "minLength": 1
    },
    "GTM-FS02AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "GTM-FS02AdminPassword": {
      "type": "securestring"
    },
    "GTM-FS02WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Nano-Server",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    }

  },
  "variables": {
    "VNetName": "VNet1",
    "VNet1Prefix": "192.168.0.0/16",
    "VNet1Subnet1Name": "Production",
    "VNet1Subnet1Prefix": "192.168.95.0/24",
    "VNet1Subnet2Name": "Future",
    "VNet1Subnet2Prefix": "192.168.96.0/24",
    "ojradcliffestorageName": "[concat('ojrad', uniqueString(resourceGroup().id))]",
    "GTM-DC01ImagePublisher": "MicrosoftWindowsServer",
    "GTM-DC01ImageOffer": "WindowsServer",
    "GTM-DC01OSDiskName": "GTM-DC01OSDisk",
    "GTM-DC01VmSize": "Standard_D2_v2",
    "GTM-DC01VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
    "GTM-DC01SubnetRef": "[concat(variables('GTM-DC01VnetID'), '/subnets/', variables('VNet1Subnet1Name'))]",
    "GTM-DC01StorageAccountContainerName": "vhds",
    "GTM-DC01NicName": "[concat(parameters('GTM-DC01Name'), 'Nic0')]",
    "GTM-Server01ImagePublisher": "MicrosoftWindowsServer",
    "GTM-Server01ImageOffer": "WindowsServer",
    "GTM-Server01OSDiskName": "GTM-Server01OSDisk",
    "GTM-Server01VmSize": "Standard_D2_v2",
    "GTM-Server01VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
    "GTM-Server01SubnetRef": "[concat(variables('GTM-Server01VnetID'), '/subnets/', variables('VNet1Subnet1Name'))]",
    "GTM-Server01StorageAccountContainerName": "vhds",
    "GTM-Server01NicName": "[concat(parameters('GTM-Server01Name'), 'Nic0')]",
    "GTM-DC02ImagePublisher": "MicrosoftWindowsServer",
    "GTM-DC02ImageOffer": "WindowsServer",
    "GTM-DC02OSDiskName": "GTM-DC02OSDisk",
    "GTM-DC02VmSize": "Standard_D2_v2",
    "GTM-DC02VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
    "GTM-DC02SubnetRef": "[concat(variables('GTM-DC02VnetID'), '/subnets/', variables('VNet1Subnet1Name'))]",
    "GTM-DC02StorageAccountContainerName": "vhds",
    "GTM-DC02NicName": "[concat(parameters('GTM-DC02Name'), 'Nic0')]",
    "PublicIP-DC01Name": "PublicIP-DC01",
    "PublicIP-Server01Name": "PublicIP-Server01",
    "PublicIP-DC02Name": "PublicIP-DC02",
    "PrivateIP-DC01": "192.168.95.10",
    "PrivateIP-Server01": "192.168.95.11",
    "PrivateIP-DC02": "192.168.95.12",
    "DSCURL": "[concat(parameters('assetLocation'),'DSCAssets.zip')]",
    "DC01DSCscript": "CreateFirstDC.ps1",
    "DC01DSCfunction": "CreateFirstDC",
    "DC02DSCscript": "CreateSecondDC.ps1",
    "DC02DSCfunction": "CreateSecondDC",
    "adPopulationData": "populationData.psd1",
    "GTM-FS01ImagePublisher": "MicrosoftWindowsServer",
    "GTM-FS01ImageOffer": "WindowsServer",
    "GTM-FS01OSDiskName": "GTM-FS01OSDisk",
    "GTM-FS01VmSize": "Standard_D2_v2",
    "GTM-FS01VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
    "GTM-FS01SubnetRef": "[concat(variables('GTM-FS01VnetID'), '/subnets/', variables('VNet1Subnet1Name'))]",
    "GTM-FS01StorageAccountContainerName": "vhds",
    "GTM-FS01NicName": "[concat(parameters('GTM-FS01Name'), 'Nic0')]",
    "PrivateIP-FS01": "192.168.95.13",
    "PublicIP-FS01Name": "PublicIP-FS01",
    "GTM-FS02ImagePublisher": "MicrosoftWindowsServer",
    "GTM-FS02ImageOffer": "WindowsServer",
    "GTM-FS02OSDiskName": "GTM-FS02OSDisk",
    "GTM-FS02VmSize": "Standard_D2_v2",
    "GTM-FS02VnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
    "GTM-FS02SubnetRef": "[concat(variables('GTM-FS02VnetID'), '/subnets/', variables('VNet1Subnet1Name'))]",
    "GTM-FS02StorageAccountContainerName": "vhds",
    "GTM-FS02NicName": "[concat(parameters('GTM-FS02Name'), 'NetworkInterface')]",
    "PrivateIP-FS02": "192.168.95.14",
    "PublicIP-FS02Name": "PublicIP-FS02"
  },
  "resources": [
    {
      "name": "[variables('VNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [],
      "tags": {
        "displayName": "VNet1"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('VNet1Prefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('VNet1Subnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('VNet1Subnet1Prefix')]"
            }
          },
          {
            "name": "[variables('VNet1Subnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('VNet1Subnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('ojradcliffestorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [],
      "tags": {
        "displayName": "ojradcliffestorage"
      },
      "properties": {
        "accountType": "[parameters('ojradcliffestorageType')]"
      }
    },
    {
      "name": "[variables('GTM-DC01NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-DC01Name'))]"
      ],
      "tags": {
        "displayName": "GTM-DC01Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('PrivateIP-DC01')]",
              "subnet": {
                "id": "[variables('GTM-DC01SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-DC01Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('GTM-DC01Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('ojradcliffestorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-DC01NicName'))]"
      ],
      "tags": {
        "displayName": "GTM-DC01"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('GTM-DC01VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('GTM-DC01Name')]",
          "adminUsername": "[parameters('GTM-DC01AdminUsername')]",
          "adminPassword": "[parameters('GTM-DC01AdminPassword')]",
          "windowsConfiguration": {
            "timeZone": "Central Standard Time"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('GTM-DC01ImagePublisher')]",
            "offer": "[variables('GTM-DC01ImageOffer')]",
            "sku": "[parameters('GTM-DC01WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "GTM-DC01OSDisk",
            "vhd": {
              "uri": "[concat('https://', variables('ojradcliffestorageName'), '.blob.core.windows.net/', variables('GTM-DC01StorageAccountContainerName'), '/', variables('GTM-DC01OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-DC01NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "CreateFirstDC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('GTM-DC01Name'))]"
          ],
          "tags": {
            "displayName": "DC01DSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.21",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "wmfVersion": "latest",
              "configuration": {
                "url": "[variables('DSCURL')]",
                "script": "[variables('DC01DSCscript')]",
                "function": "[variables('DC01DSCfunction')]"
              },
              "configurationArguments": {
                "DomainName": "[parameters('domainName')]",
                "Admincreds": {
                  "Username": "[parameters('GTM-DC01AdminUserName')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                }
              }
            },
            "protectedSettings": {
              "Items": {
                "AdminPassword": "[parameters('GTM-DC01AdminPassword')"
              }
            }
          }
        }
      ]
    },
    {
      "name": "[variables('GTM-Server01NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-Server01Name'))]"
      ],
      "tags": {
        "displayName": "GTM-Server01Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('PrivateIP-Server01')]",
              "subnet": {
                "id": "[variables('GTM-Server01SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-Server01Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('GTM-Server01Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('ojradcliffestorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-Server01NicName'))]"
      ],
      "tags": {
        "displayName": "GTM-Server01"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('GTM-Server01VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('GTM-Server01Name')]",
          "adminUsername": "[parameters('GTM-Server01AdminUsername')]",
          "adminPassword": "[parameters('GTM-Server01AdminPassword')]",
          "windowsConfiguration": {
            "timeZone": "Central Standard Time"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('GTM-Server01ImagePublisher')]",
            "offer": "[variables('GTM-Server01ImageOffer')]",
            "sku": "[parameters('GTM-Server01WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "GTM-Server01OSDisk",
            "vhd": {
              "uri": "[concat('https://', variables('ojradcliffestorageName'), '.blob.core.windows.net/', variables('GTM-Server01StorageAccountContainerName'), '/', variables('GTM-Server01OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-Server01NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "Server1JoinDomain",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('GTM-Server01Name'))]",
            "[concat('Microsoft.Compute/virtualMachines/', parameters('GTM-DC01Name'),'/extensions/CreateFirstDC')]",
            "Microsoft.Resources/deployments/updatenicdns"
          ],
          "tags": {
            "displayName": "Server01JoinDomain"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.3",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "Name": "[parameters('domainName')]",
              "User": "[concat(parameters('domainName'), '\\', parameters('GTM-DC01AdminUserName'))]",
              "Restart": "true",
              "Options": "3"
            },
            "protectedSettings": {
              "password": "[parameters('GTM-DC01AdminPassword')]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('GTM-DC02NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-DC02Name'))]"
      ],
      "tags": {
        "displayName": "GTM-DC02Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('PrivateIP-DC02')]",
              "subnet": {
                "id": "[variables('GTM-DC02SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIP-DC02Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('GTM-DC02Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('ojradcliffestorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-DC02NicName'))]"
      ],
      "tags": {
        "displayName": "GTM-DC02"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('GTM-DC02VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('GTM-DC02Name')]",
          "adminUsername": "[parameters('GTM-DC02AdminUsername')]",
          "adminPassword": "[parameters('GTM-DC02AdminPassword')]",
          "windowsConfiguration": {
            "timeZone": "Central Standard Time"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('GTM-DC02ImagePublisher')]",
            "offer": "[variables('GTM-DC02ImageOffer')]",
            "sku": "[parameters('GTM-DC02WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "GTM-DC02OSDisk",
            "vhd": {
              "uri": "[concat('https://', variables('ojradcliffestorageName'), '.blob.core.windows.net/', variables('GTM-DC02StorageAccountContainerName'), '/', variables('GTM-DC02OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-DC02NicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "CreateSecondDC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('GTM-DC02Name'))]",
            "[concat('Microsoft.Compute/virtualMachines/', parameters('GTM-Server01Name'),'/extensions/Server1JoinDomain')]"
          ],
          "tags": {
            "displayName": "DC02DSC"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.21",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "wmfVersion": "latest",
              "configuration": {
                "url": "[variables('DSCURL')]",
                "script": "[variables('DC02DSCscript')]",
                "function": "[variables('DC02DSCfunction')]"
              },
              "configurationdata": {
                "url": "[concat(parameters('assetLocation'), variables('adPopulationData'))]"
              },
              "configurationArguments": {
                "DomainName": "[parameters('domainName')]",
                "adminCreds": {
                  "userName": "[parameters('GTM-DC01AdminUserName')]",
                  "password": "[parameters('GTM-DC01AdminPassword')]"
                }
              }
            },
            "protectedSettings": {}
          }
        }
      ]
    },
    {
      "name": "[variables('GTM-FS01NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]"
      ],
      "tags": {
        "displayName": "GTM-FS01Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('PrivateIP-FS01')]",
              "subnet": {
                "id": "[variables('GTM-FS01SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('GTM-FS01Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('ojradcliffestorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-FS01NicName'))]"
      ],
      "tags": {
        "displayName": "GTM-FS01"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('GTM-FS01VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('GTM-FS01Name')]",
          "adminUsername": "[parameters('GTM-FS01AdminUsername')]",
          "adminPassword": "[parameters('GTM-FS01AdminPassword')]",
          "windowsConfiguration": {
            "timeZone": "Central Standard Time"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('GTM-FS01ImagePublisher')]",
            "offer": "[variables('GTM-FS01ImageOffer')]",
            "sku": "[parameters('GTM-FS01WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "GTM-FS01OSDisk",
            "vhd": {
              "uri": "[concat('https://', variables('ojradcliffestorageName'), '.blob.core.windows.net/', variables('GTM-FS01StorageAccountContainerName'), '/', variables('GTM-FS01OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('GTM-FS01NicName'))]"
            }
          ]
        }
      }
    },
    {
      "name": "[variables('GTM-FS02NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('VNetName'))]"
      ],
      "tags": {
        "displayName": "GTM-FS02Nic"
      },
